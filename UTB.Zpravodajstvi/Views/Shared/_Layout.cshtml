<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UTB Zpravodajství</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UTB.Zpravodajstvi.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fw-bold text-primary">UTB Zpravodajství</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && 
                                             ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" 
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Domů
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 @(ViewContext.RouteData.Values["Controller"].ToString() == "Articles" ? "active" : "")" 
                               asp-area="" asp-controller="Articles" asp-action="Index">
                                <i class="fas fa-newspaper me-1"></i>Články
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated && (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.Writer))))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 @(ViewContext.RouteData.Values["Controller"].ToString() == "Article" ? "active" : "")" 
                                   asp-area="Admin" asp-controller="Article" asp-action="Select">
                                    <i class="fas fa-edit me-1"></i>Správa článků
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(Roles.Admin)))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 @(ViewContext.RouteData.Values["Controller"].ToString() == "User" ? "active" : "")" 
                                   asp-area="Admin" asp-controller="User" asp-action="Select">
                                    <i class="fas fa-users me-1"></i>Správa uživatelů
                                </a>
                            </li>
                        }
                    </ul>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" 
                               id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=random" 
                                     class="rounded-circle me-2" width="32" height="32" alt="Avatar">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                                    @if (!User.IsInRole(nameof(Roles.Admin)))
                        {
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                                        }
                                <li>
                                    <a class="dropdown-item text-danger" asp-area="Security" 
                                       asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Odhlásit se
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-primary" asp-area="Security" 
                               asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Přihlásit se
                            </a>
                            <a class="btn btn-primary" asp-area="Security" 
                               asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus me-1"></i>Registrace
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
