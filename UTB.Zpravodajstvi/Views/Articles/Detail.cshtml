@model Article
@{
    ViewData["Title"] = Model.Title;
    ViewData["ShowFooter"] = true;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm">
                @if (!string.IsNullOrEmpty(Model.ImageSrc))
                {
                    <img src="@Model.ImageSrc" class="card-img-top" alt="@Model.Title" 
                         style="max-height: 400px; object-fit: cover;">
                }
                <div class="card-body p-4">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-home me-1"></i>Domů
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-controller="Articles" asp-action="Index" class="text-decoration-none">
                                    <i class="fas fa-newspaper me-1"></i>Články
                                </a>
                            </li>
                            <li class="breadcrumb-item active">@Model.Title</li>
                        </ol>
                    </nav>

                    <h1 class="h2 mb-4">@Model.Title</h1>
                    
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge bg-primary me-2">
                            <i class="fas fa-tag me-1"></i>@Model.Category?.Name
                        </span>
                        @if (Model.ArticleTags != null)
                        {
                            foreach (var articleTag in Model.ArticleTags)
                            {
                                <span class="badge bg-info ms-1">
                                    <i class="fas fa-hashtag me-1"></i>@articleTag.Tag?.Name
                                </span>
                            }
                        }
                    </div>

                    <p class="lead mb-4">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div> 
    
@section Styles {
    <link rel="stylesheet" href="~/css/content.css" />
}
    