@model IList<Article>
@{
    ViewData["Title"] = "Články";
    ViewData["ShowFooter"] = true;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h1 class="h3 mb-2">Články</h1>
                    <p class="mb-0 opacity-75">Přehled všech publikovaných článků</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var article in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm hover-lift">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(article.ImageSrc))
                        {
                            <img src="@article.ImageSrc" 
                                 class="card-img-top rounded-top" 
                                 alt="@article.Title" 
                                 style="height: 200px; object-fit: cover;">
                        }
                        <div class="position-absolute top-0 start-0 p-3">
                            <span class="badge bg-primary rounded-pill">
                                <i class="fas fa-tag me-1"></i>@article.Category?.Name
                            </span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @(article.Description?.Length > 150 
                                ? article.Description[..147] + "..." 
                                : article.Description)
                        </p>
                        <div class="mt-3">
                            @if (article.ArticleTags != null)
                            {
                                <div class="mb-3">
                                    @foreach (var articleTag in article.ArticleTags)
                                    {
                                        <span class="badge bg-light text-dark me-1">
                                            <i class="fas fa-hashtag me-1"></i>@articleTag.Tag?.Name
                                        </span>
                                    }
                                </div>
                            }
                            <a asp-action="Detail" asp-route-id="@article.Id" 
                               class="btn btn-outline-primary rounded-pill w-100">
                                <i class="fas fa-book-reader me-2"></i>Číst více
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/content.css" />
} 
