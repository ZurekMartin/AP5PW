@model IList<Article>
@{
    ViewData["Title"] = "Články";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light border-0 shadow-sm">
                <div class="card-body">
                    <h1 class="h3 mb-0">Články</h1>
                    <p class="text-muted mb-0">Přehled všech publikovaných článků</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card h-100 border-0 shadow-sm article-card">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(article.ImageSrc))
                        {
                            <img src="@article.ImageSrc" class="card-img-top" alt="@article.Title" 
                                 style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light text-center py-5">
                                <i class="fas fa-newspaper fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="position-absolute bottom-0 start-0 w-100 p-3 
                                text-white article-overlay">
                            <span class="badge bg-primary">
                                <i class="fas fa-tag me-1"></i>@article.CategoryID
                            </span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-3">@article.Title</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @(article.Description?.Length > 150 
                                ? article.Description.Substring(0, 147) + "..." 
                                : article.Description)
                        </p>
                        <div class="d-flex justify-content-end">
                            <a asp-action="Detail" asp-route-id="@article.Id" 
                               class="btn btn-outline-primary">
                                <i class="fas fa-book-reader me-2"></i>Číst více
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .article-card {
            transition: transform 0.2s ease-in-out;
        }
        
        .article-card:hover {
            transform: translateY(-5px);
        }
        
        .article-overlay {
            background: linear-gradient(0deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
        }
    </style>
} 