@model LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
    ViewData["ShowFooter"] = true;
}
@section Styles
{
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
                <p class="lead">Vítejte zpět! Přihlaste se do svého účtu.</p>
            </div>
        </div>
    </div>
</div>

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="auth-card">
                    <div class="text-center">
                        <div class="auth-icon">
                            <i class="fas fa-user-circle"></i>
                        </div>
                    </div>

                    <form asp-action="Login" method="post" class="form-signin">
                        @if (Model?.LoginFailed == true)
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>Přihlášení se nezdařilo!</span>
                            </div>
                        }
                        
                        @if (ViewData.ModelState.IsValid == false)
                        {
                            <div asp-validation-summary="All" class="text-danger"></div>
                        }
                        
                        <div class="form-floating">
                            <input asp-for="Username" class="form-control" id="inputUsername" placeholder="Uživatelské jméno">
                            <label for="inputUsername">
                                <i class="fas fa-user me-2"></i>Uživatelské jméno
                            </label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" class="form-control" id="inputPassword" placeholder="Heslo">
                            <label for="inputPassword">
                                <i class="fas fa-lock me-2"></i>Heslo
                            </label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-3">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-sign-in-alt me-2"></i>Přihlásit se
                            </button>
                            <a asp-action="Register" class="btn btn-outline-secondary">
                                <i class="fas fa-user-plus me-2"></i>Ještě nejste registrováni?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validations/loginValidation.js"></script>
}
