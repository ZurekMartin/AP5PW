@model LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
    ViewData["ShowFooter"] = true;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white text-center border-0 py-4">
                    <div class="display-1 mb-3">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <h1 class="h3 mb-2">@ViewData["Title"]</h1>
                    <p class="mb-0 opacity-75">Vítejte zpět! Přihlaste se do svého účtu.</p>
                </div>
                
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        @if (Model?.LoginFailed == true)
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <span>Přihlášení se nezdařilo!</span>
                            </div>
                        }
                        
                        @if (ViewData.ModelState.IsValid == false)
                        {
                            <div asp-validation-summary="All" class="text-danger"></div>
                        }
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Uživatelské jméno">
                            <label asp-for="Username">
                                <i class="fas fa-user me-2"></i>Uživatelské jméno
                            </label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" class="form-control" placeholder="Heslo">
                            <label asp-for="Password">
                                <i class="fas fa-lock me-2"></i>Heslo
                            </label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-3">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-sign-in-alt me-2"></i>Přihlásit se
                            </button>
                            <a asp-action="Register" class="btn btn-outline-secondary">
                                <i class="fas fa-user-plus me-2"></i>Ještě nejste registrováni?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
