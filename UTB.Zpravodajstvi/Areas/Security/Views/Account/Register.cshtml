@model RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
    ViewData["ShowFooter"] = true;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white text-center border-0 py-4">
                    <div class="display-1 mb-3">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <h1 class="h3 mb-2">@ViewData["Title"]</h1>
                    <p class="mb-0 opacity-75">Vytvořte si účet a začněte používat UTB Zpravodajství</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        @if (ViewData.ModelState.IsValid == false)
                        {
                            <div asp-validation-summary="All" class="text-danger"></div>
                        }
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="Jméno">
                                    <label asp-for="FirstName">
                                        <i class="fas fa-user me-2"></i>Jméno
                                    </label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Příjmení">
                                    <label asp-for="LastName">
                                        <i class="fas fa-user me-2"></i>Příjmení
                                    </label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Username" class="form-control" placeholder="Uživatelské jméno">
                                    <label asp-for="Username">
                                        <i class="fas fa-at me-2"></i>Uživatelské jméno
                                    </label>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="E-mailová adresa">
                                    <label asp-for="Email">
                                        <i class="fas fa-envelope me-2"></i>E-mailová adresa
                                    </label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Password" class="form-control" placeholder="Heslo">
                                    <label asp-for="Password">
                                        <i class="fas fa-lock me-2"></i>Heslo
                                    </label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="RepeatedPassword" class="form-control" placeholder="Zopakujte heslo">
                                    <label asp-for="RepeatedPassword">
                                        <i class="fas fa-lock me-2"></i>Zopakujte heslo
                                    </label>
                                    <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3 mt-4">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-user-plus me-2"></i>Registrovat
                            </button>
                            <a asp-action="Login" class="btn btn-outline-secondary">
                                <i class="fas fa-sign-in-alt me-2"></i>Už máte účet?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
