@model IList<Article>
@{
    ViewData["Title"] = "Správa článků";
}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light border-0 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                        <p class="text-muted mb-0">Přehled všech publikovaných článků</p>
                    </div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Nový článek
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @foreach (var article in Model)
            {
                <div class="col-12 col-md-6 col-xl-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(article.ImageSrc))
                            {
                                <img src="@article.ImageSrc" class="card-img-top" alt="@article.Title" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light text-center py-5">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            <div class="position-absolute top-0 end-0 p-2">
                                <span class="badge bg-primary">ID: @article.Id</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-3">@article.Title</h5>
                            <p class="card-text text-muted mb-3">@article.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-light text-dark">
                                    <i class="fas fa-tag me-1"></i>@article.CategoryID
                                </span>
                                <div class="btn-group">
                                    <a asp-action="Update" asp-route-id="@article.Id" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Upravit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@article.Id" 
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return ConfirmDelete();">
                                        <i class="fas fa-trash me-1"></i>Smazat
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                        <h3 class="h4">Zatím zde nejsou žádné články</h3>
                        <p class="text-muted">Začněte vytvořením nového článku</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-2"></i>Vytvořit článek
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<footer class="footer bg-light mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-4 mb-3">
                    <h5 class="text-primary mb-3">UTB Zpravodajství</h5>
                    <p class="text-muted">Váš spolehlivý zdroj informací ze světa UTB</p>
                </div>
                <div class="col-6 col-md-4 mb-3">
                    <h5 class="text-dark mb-3">Rychlé odkazy</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Home" asp-action="Index" 
                               class="text-muted text-decoration-none">
                                <i class="fas fa-home me-2"></i>Domů
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Articles" asp-action="Index" 
                               class="text-muted text-decoration-none">
                                <i class="fas fa-newspaper me-2"></i>Články
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" 
                               class="text-muted text-decoration-none">
                                <i class="fas fa-shield-alt me-2"></i>Ochrana soukromí
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-6 col-md-4 mb-3">
                    <h5 class="text-dark mb-3">Sledujte nás</h5>
                    <div class="d-flex gap-2">
                        <a href="https://www.facebook.com/UTBZlin/?locale=cs_CZ" target="_blank" class="btn btn-outline-primary">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                                                <a href="https://www.instagram.com/utbzlin/" target="_blank" class="btn btn-outline-danger">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="https://twitter.com/UTBZlin" target="_blank" class="btn btn-outline-info">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
            <hr>
            <div class="text-center text-muted">
                &copy; @DateTime.Now.Year - UTB Zpravodajství
            </div>
        </div>
    </footer>

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}
