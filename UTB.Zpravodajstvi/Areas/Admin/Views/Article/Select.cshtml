@model IList<Article>
@{
    ViewData["Title"] = "Správa článků";
    ViewData["ShowFooter"] = true;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 mb-2">@ViewData["Title"]</h1>
                            <p class="mb-0 opacity-75">Přehled všech publikovaných článků</p>
                        </div>
                        <a asp-action="Create" class="btn btn-light rounded-pill">
                            <i class="fas fa-plus-circle me-2"></i>Nový článek
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row g-4">
            @foreach (var article in Model)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(article.ImageSrc))
                            {
                                <img src="@article.ImageSrc" class="card-img-top" 
                                     alt="@article.Title" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light text-center py-5">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            <div class="position-absolute top-0 end-0 p-2 rounded-pill">
                                <span class="badge bg-primary">ID: @article.Id</span>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <h5 class="card-title mb-3">@article.Title</h5>
                            <p class="card-text text-muted mb-3">
                                @(article.Description?.Length > 150 
                                    ? article.Description[..147] + "..." 
                                    : article.Description)
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-light text-dark rounded-pill">
                                    <i class="fas fa-tag me-1"></i>@article.Category?.Name
                                </span>
                                <div class="d-flex gap-2">
                                    <a asp-action="Update" asp-route-id="@article.Id" 
                                       class="btn btn-outline-primary rounded-pill">
                                        <i class="fas fa-edit me-2"></i>Upravit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@article.Id" 
                                       class="btn btn-outline-danger rounded-pill"
                                       onclick="return ConfirmDelete();">
                                        <i class="fas fa-trash me-2"></i>Smazat
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <div class="display-1 text-muted mb-4">
                            <i class="fas fa-newspaper"></i>
                        </div>
                        <h3 class="h4 mb-3">Zatím zde nejsou žádné články</h3>
                        <p class="text-muted mb-4">Začněte vytvořením nového článku</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-2"></i>Vytvořit článek
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/dialogs.js"></script>
}
