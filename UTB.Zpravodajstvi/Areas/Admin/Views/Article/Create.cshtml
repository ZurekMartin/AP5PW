@model Article
@{
    ViewData["Title"] = "Article - Create";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Title"></label>
        <input class="form-control" asp-for="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ImageSrc"></label>
        <input class="form-control" asp-for="ImageSrc">
        <span asp-validation-for="ImageSrc" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CategoryID"></label>
        <input class="form-control" asp-for="CategoryID">
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
        {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validations/FirstLetterCapitalizedCZ.js"></script>
}
