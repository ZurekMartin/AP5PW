@model Article
@{
    ViewData["Title"] = "Nový článek";
    ViewData["ShowFooter"] = true;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white text-center border-0 py-4">
                    <div class="display-1 mb-3">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <h1 class="h3 mb-2">@ViewData["Title"]</h1>
                    <p class="mb-0 opacity-75">Vytvořte nový článek pro UTB Zpravodajství</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-12 col-md-8">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Title" placeholder="Název článku">
                                    <label asp-for="Title">
                                        <i class="fas fa-heading me-2"></i>Název článku
                                    </label>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="CategoryID" placeholder="Kategorie">
                                    <label asp-for="CategoryID">
                                        <i class="fas fa-tag me-2"></i>Kategorie
                                    </label>
                                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" asp-for="Description" 
                                              placeholder="Popis článku" style="height: 120px"></textarea>
                                    <label asp-for="Description">
                                        <i class="fas fa-align-left me-2"></i>Popis článku
                                    </label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <label class="form-label">
                                    <i class="fas fa-image me-2"></i>Obrázek článku
                                </label>
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <input id="File" class="form-control" type="file" asp-for="Image">
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Select" class="btn btn-light rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Zpět
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill">
                                <i class="fas fa-save me-2"></i>Vytvořit článek
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
