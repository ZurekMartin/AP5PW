@model Article
@{
    ViewData["Title"] = "Úprava článku";
}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-4">
                    <h1 class="h3 mb-0 text-center">
                        <i class="fas fa-edit me-2"></i>@ViewData["Title"]
                    </h1>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Update" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-12 col-md-8 mb-4">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Title" value="@Model.Title">
                                    <label asp-for="Title">
                                        <i class="fas fa-heading me-2"></i>Název článku
                                    </label>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12 col-md-4 mb-4">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="CategoryID" value="@Model.CategoryID">
                                    <label asp-for="CategoryID">
                                        <i class="fas fa-tag me-2"></i>Kategorie
                                    </label>
                                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <textarea class="form-control" asp-for="Description" 
                                          style="height: 100px">@Model.Description</textarea>
                                <label asp-for="Description">
                                    <i class="fas fa-align-left me-2"></i>Popis článku
                                </label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label d-block">
                                <i class="fas fa-image me-2"></i>Obrázek článku
                            </label>
                            <div class="card bg-light">
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(Model.ImageSrc))
                                    {
                                        <div class="mb-3">
                                            <img src="@Model.ImageSrc" alt="Current Image" 
                                                 class="img-thumbnail" style="max-height: 200px">
                                        </div>
                                    }
                                    <input id="File" class="form-control" type="file" asp-for="Image">
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Select" class="btn btn-light">
                                <i class="fas fa-arrow-left me-2"></i>Zpět
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Uložit změny
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validations/FirstLetterCapitalizedCZ.js"></script>
    <script src="~/js/Validations/FileContentValidation.js"></script>
}
