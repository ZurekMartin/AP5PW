@using UTB.Zpravodajstvi.Infrastructure.Identity
@model User
@{
    ViewData["Title"] = "Úprava uživatele";
    ViewData["ShowFooter"] = true;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-4">
                    <div class="text-center">
                        <img src="https://ui-avatars.com/api/?name=@Model.UserName&background=random" 
                             class="rounded-circle mb-3" width="96" height="96" alt="Avatar">
                        <h1 class="h3 mb-0">
                            <i class="fas fa-user-edit me-2"></i>@ViewData["Title"]
                        </h1>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="FirstName">
                                    <label asp-for="FirstName">
                                        <i class="fas fa-user me-2"></i>Jméno
                                    </label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="LastName">
                                    <label asp-for="LastName">
                                        <i class="fas fa-user me-2"></i>Příjmení
                                    </label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Email">
                                    <label asp-for="Email">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="UserName">
                                    <label asp-for="UserName">
                                        <i class="fas fa-user-tag me-2"></i>Uživatelské jméno
                                    </label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Select" class="btn btn-light rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Zpět
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill">
                                <i class="fas fa-save me-2"></i>Uložit změny
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validations/FirstLetterCapitalizedCZ.js"></script>
    <script src="~/js/Validations/FileContentValidation.js"></script>
}
